#!/usr/bin/env bash
set -e -o pipefail -o nounset

screen=$(xrandr | grep -w connected | awk '!/LVDS/ {print $1}')
if [ "$screen" == "DP-1" ]; then
    xrandr --output LVDS-1 --off
    xrandr --output DP-1 --mode 1920x1200 --pos 0x0 --rotate normal --output VGA-1 --mode 1920x1080 --pos 1960x56 --rotate normal
elif [ "$screen" == "VGA-1" ]; then
    DISPLAY=:0 xrandr --output VGA-1 --mode 1440x900 --pos 0x0 --rotate normal --output LVDS-1 --primary --mode 1366x768 --pos 1440x132 --rotate normal
else
    xrandr --output LVDS-1 --mode 1366x768 --output DP-1 --off --output VGA-1 --off
fi
