set -o errexit -o pipefail -o nounset

# Get sink that are not running and are not echo cancel
available_sink=$(pactl list short sinks | awk '$3 !~ /^module-echo-cancel.c$/ && $7 !~ /^RUNNING$/ {print $1}')

if [[ -n $available_sink ]] && [[ ${#available_sink} -eq 1 ]]; then
  pacmd set-default-sink "$available_sink"
  sink_description=$(pactl list sinks | awk -F: '/State: RUNNING/,/Properties/ { if (/Description:/) {p=1;info=$2}} p {print info;p=0}' | awk '{$1=$1};1')
  notify-send "Changed output to $sink_description"
else
  notify-send "No available sink playing"
fi
