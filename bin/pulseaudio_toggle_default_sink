set -o errexit -o pipefail -o nounset

# Compatible with pipewire !
current_sink=$(pactl info | sed -En 's/Default Sink: (.*)/\1/p')
available_sink=$(pactl list short sinks | awk -v current_sink="$current_sink" '$2 !~ current_sink && $3 !~ /^module-echo-cancel.c$/ && $7 !~ /^RUNNING$/ {print $1}')

if [[ -n $available_sink ]] && [[ $(wc -w <<< "$available_sink") -eq 1 ]]; then
  pactl set-default-sink "$available_sink"
  sink_description=$(pamixer --list-sinks | awk -v current_sink="$available_sink" -F'"' '$1 ~ current_sink {print $4}')
  notify-send "Changed output to $sink_description"
else
  notify-send "No available sink playing"
fi
