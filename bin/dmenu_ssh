#!/usr/bin/env bash

set -e -o pipefail -o nounset
readonly dotbin="$HOME/.dotfiles/bin"

. "$HOME/.dmenurc"
DMENU_ARGS="-i $DMENU_CONF -l 15"

ssh="$("$dotbin/give_me_hostname" | dmenu ${DMENU_ARGS} -p 'ssh to :' "$@")"

[ "$ssh" ] && . "$HOME/.dotfiles/shell/keychain" && termite --exec "$dotbin/ssh_connect $ssh" &
