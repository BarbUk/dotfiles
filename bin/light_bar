set -e -o pipefail -o nounset

action="$1"

progress(){
    local percent=$1
    local completed=$(( percent / 4 ))
    local remaining=$(( 25 - completed ))

    printf "%0.sâ–Š" $(seq $completed)
    [[ $remaining != 0 ]] && printf "%0.s " $(seq $remaining)
    echo -n
}

case $action in
    "up" )
        light -A 5
        ;;
    "down" )
        light -U 5
        ;;
esac

percent=$(light | xargs printf '%.*f' 0)
progress "$percent"
