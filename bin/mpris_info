set -o errexit -o pipefail -o nounset

if ! [[ $(playerctl status 2>&1) == 'No players found' ]]; then
    playerctl status 2>/dev/null
    playerctl -a metadata 2>/dev/null | awk '/xesam:artist/ || /xesam:title/ {$1=$2=""; print $0}' | awk '{$1=$1};1'
else
    echo 'not_running'
fi
