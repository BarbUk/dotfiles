set -o errexit -o pipefail -o nounset

readonly vm="$1"
readonly search=$(grep "$vm" "$HOME"/.dsh/group/pro* | cut -d/ -f 6)

if [ ! -z "$search" ] && [ $(echo "$search" | wc -l ) -gt 1 ]; then
    echo "${search//:/: }"
else
    proo=${search%:*}

    resolve="$(getent hosts "$proo" | wc -l)"

    if [[ $resolve -gt 0 ]]; then
        echo "Sshing to $proo"
        ssh "$proo"
    fi
fi
