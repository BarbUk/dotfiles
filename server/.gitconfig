[user]
  useConfigOnly = true
[push]
  default = current
[pull]
  rebase = true
[alias]
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
[core]
  pager = less -FRSX
[color]
  ui = auto
[safe]
  directory = *
[commit]
  verbose = true
