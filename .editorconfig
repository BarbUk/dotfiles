root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[[shell]]
indent_style = space
indent_size = 2
# --language-variant
shell_variant      = posix
binary_next_line   = true
# --case-indent
switch_case_indent = true
space_redirects    = true
keep_padding       = true
# --func-next-line
function_next_line = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.lua]
indent_style = space
indent_size = 3

[Makefile]
indent_style = tab
