#!/usr/bin/env bash
eval "$(dircolors -b)"
eval "$(rbenv init -)"
alias ls='ls --color=auto'
alias up='yaourt -Syu --aur --noconfirm'

bupc() {
    up
    pip freeze --local \
    | grep -v '^\-e' \
    | cut -d = -f 1  \
    | xargs -n1 sudo -H pip install -U
}

xclip=$(command -v xclip)

pbcopy() {
    $xclip -selection clipboard
}
pbpaste() {
    $xclip -selection clipboard -o
}

