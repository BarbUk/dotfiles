#!/usr/bin/env bash
eval "$(dircolors -b "$HOME"/.dir_colors)"
# rbenv gem
if [ -d "$HOME/.rbenv/shims" ]; then
    export PATH="$HOME/.rbenv/shims:${PATH}"
    export RBENV_SHELL=bash
else
    # system ruby gem
    ruby_gem_bin_dir=$(gem env | awk '/USER INSTALLATION DIRECTORY/ {print $NR}')
    if [ -d "$ruby_gem_bin_dir/bin" ]; then
        export PATH="$ruby_gem_bin_dir/bin:${PATH}"
    fi
fi

alias ls='ls --color=auto'
alias up='yay -Syu --noconfirm'
alias yaourt='yay'
alias usb3='sudo modprobe -r xhci_pci && sudo modprobe xhci-pci'

bupc() {
    update_gem
    update_vagrant
    if command -v rustup >/dev/null 2>&1; then
        rustup update
    fi
    up
}

update_gem() {
    if command -v gem >/dev/null 2>&1; then
        gem update --system
        gem update
        gem cleanup
    fi
    if command -v rbenv >/dev/null 2>&1; then
        rbenv rehash
    fi
}

update_vagrant() {
    if command -v vagrant >/dev/null 2>&1; then
        vagrant plugin update
        vagrant box update
        vagrant box prune
    fi
}

pbcopy() {
    xclip -selection clipboard
}

pbpaste() {
    xclip -selection clipboard -o
}
