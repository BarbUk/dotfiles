#!/usr/bin/env bash
eval "$(dircolors -b)"
eval "$(rbenv init -)"
alias ls='ls --color=auto'
alias up='yaourt -Syu --aur --noconfirm'

bupc() {
    up
    pip freeze --local \
    | grep -v '^\-e' \
    | cut -d = -f 1  \
    | xargs -n1 pip install -U
}

XCLIP=$(command -v xclip)
if [[ $XCLIP ]]; then
    alias pbcopy="$XCLIP -selection clipboard"
    alias pbpaste="$XCLIP -selection clipboard -o"
fi

